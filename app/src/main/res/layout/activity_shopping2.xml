<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ftkj.baserecyclerviewadapterhelper_test.recycle_shopping.ShoppingActivity">
   <android.support.v7.widget.RecyclerView
       android:id="@+id/shopping_recyclerview"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/totle_price"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:background="#62484848"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:text="总金额：2120.00"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>

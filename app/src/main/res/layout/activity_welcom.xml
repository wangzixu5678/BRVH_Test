<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.ftkj.baserecyclerviewadapterhelper_test.WelcomActivity">
        <Button
            android:id="@+id/wel_anim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animation"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/wel_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoping"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/wel_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RefreshSwipe"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/wel_mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Multiple"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/wel_mul2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Multiple2"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/wel_drag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drag"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/wel_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Section"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/wel_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expandable"
            android:textAllCaps="false"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
